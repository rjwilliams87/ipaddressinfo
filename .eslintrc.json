{
  "extends": [
    "next/core-web-vitals",
    "plugin:import/recommended",
    // "plugin:import/order",
    "prettier",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "import/order": [
      "error",
      {
        "newlines-between": "always",
        "pathGroups": [{ "pattern": "@/", "group": "internal" }],
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index",
          "object",
          "type"
        ]
      }
    ]
  }
}
